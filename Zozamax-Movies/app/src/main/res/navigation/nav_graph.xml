<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.zozamax_app.fragments.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_movieTestFragment"
            app:destination="@id/movieTestFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.zozamax_app.fragments.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.zozamax_app.fragments.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/movieTestFragment"
        android:name="com.example.zozamax_app.fragments.MovieTestFragment"
        android:label="fragment_movie_test"
        tools:layout="@layout/fragment_movie_test" />
</navigation>